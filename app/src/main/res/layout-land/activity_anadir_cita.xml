<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_anadirCita_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/anadir_cita_titulo"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_anadirCita_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        android:text="@string/anadir_cita_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_anadirCita_titulo" />

    <EditText
        android:id="@+id/txt_anadirCita_title"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="136dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_anadirCita_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_anadirCita_titulo" />

    <TextView
        android:id="@+id/tv_anadirCita_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="36dp"
        android:text="@string/anadir_cita_location"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_anadirCita_inicio"
        app:layout_constraintEnd_toStartOf="@+id/txt_anadirCita_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_anadirCita_title" />

    <EditText
        android:id="@+id/txt_anadirCita_location"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="136dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_anadirCita_location"
        app:layout_constraintTop_toBottomOf="@+id/txt_anadirCita_title" />

    <Button
        android:id="@+id/btn_anadirCita_anadir"
        android:layout_width="149dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:text="@string/anadir_cita_anadir"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_anadirCita_fin" />

    <TextView
        android:id="@+id/tv_anadirCita_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:text="@string/anadir_cita_inicio"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_anadirCita_location" />

    <EditText
        android:id="@+id/etxtt_anadirCita_inicio"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toStartOf="@+id/tv_anadirCita_fin"
        app:layout_constraintStart_toEndOf="@+id/tv_anadirCita_inicio"
        app:layout_constraintTop_toBottomOf="@+id/txt_anadirCita_location" />

    <TextView
        android:id="@+id/tv_anadirCita_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="36dp"
        android:text="@string/anadir_cita_fin"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/etxtt_anadirCita_inicio"
        app:layout_constraintTop_toBottomOf="@+id/txt_anadirCita_location" />

    <EditText
        android:id="@+id/etxtt_anadirCita_fin"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@+id/tv_anadirCita_fin"
        app:layout_constraintTop_toBottomOf="@+id/txt_anadirCita_location" />
</androidx.constraintlayout.widget.ConstraintLayout>